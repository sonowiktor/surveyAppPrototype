<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".SurveyQuestion3">

    <androidx.cardview.widget.CardView

        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGetQuestion3"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Question 3"
                android:textColor="@color/black"
                android:textSize="30sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:paddingBottom="24dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="386dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroupAnswer3"
                        android:layout_width="409dp"
                        android:layout_height="268dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtQuestion">

                        <RadioButton
                            android:id="@+id/StronglyAgreeQuestion3"
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:text="Strongly Agree"
                            android:textColor="@color/greyDark" />

                        <RadioButton
                            android:id="@+id/NeitherAgreeNorDisagreeQuestion3"
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greyDark"
                            android:text="Agree" />

                        <RadioButton
                            android:id="@+id/NeitherQuestion3"
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greyDark"
                            android:text="Neither Agree nor Disagree" />

                        <RadioButton
                            android:id="@+id/DisagreeQuestion3"
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greyDark"
                            android:text="Disagree" />

                        <RadioButton
                            android:id="@+id/StronglyDisagreeQuestion3"
                            android:textColor="@color/greyDark"
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:text="Strongly Disagree" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.483"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroupAnswers00"
                        app:layout_constraintVertical_bias="0.102">

                        <Button
                            android:id="@+id/btnPrevQuestion3"
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:layout_marginStart="20dp"
                            android:text="Previous"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/red"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btnNextQuestion3"
                            android:layout_width="124dp"
                            android:layout_height="47dp"
                            android:layout_marginLeft="90dp"
                            android:text="Next"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/red"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>